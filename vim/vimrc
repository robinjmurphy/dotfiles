" Pathogen
  execute pathogen#infect()

" Basics
  syntax on
  set number
  set laststatus=2
  set ruler
  set showmode
  set cursorline
  set wildmenu
  set nowrap
  set wildmenu

" Enable filetype plugins
  filetype plugin on

" Colours
  colorscheme base16-oceanicnext

" All the backspaces!
  set backspace=indent,eol,start

" Tabs and whitespace
  set expandtab
  set tabstop=2
  set shiftwidth=2
  set smartindent

" Searching
  set hlsearch
  set incsearch
  set ignorecase

" Filetypes
  au BufNewFile,BufRead Vagrantfile set filetype=ruby
  au BufNewFile,BufRead Gemfile set filetype=ruby

" Paste
  set clipboard=unnamed

